<% layout("./layouts/boilerplate.ejs") -%>
<body>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            <h3>Edit the Listing</h3>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" class="form-control" id="title" placeholder="Property name" value="<%= listing.title %>" type="text" required>
                    <div class="invalid-feedback">enter a valid title</div>
                </div>
                <div class="mb-3">
                    <label for="describe" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" placeholder="Describe place" id="describe" rows="4" required><%= listing.description %></textarea>
                    <div class="invalid-feedback">enter a valid description</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input name="listing[image]" class="form-control" id="image" value="<%= listing.image %>" type="text" required>
                    <div class="invalid-feedback">enter a valid image url</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" class="form-control" id="price" placeholder="price per day-night" value="<%= listing.price %>" type="number" required>
                        <div class="invalid-feedback">enter a valid price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" class="form-control" id="country" value="<%= listing.country %>" type="text" required>
                        <div class="invalid-feedback">enter a valid country</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" class="form-control" id="location" value="<%= listing.location %>" type="text" required>
                    <div class="invalid-feedback">enter a valid location</div>
                </div>
                
                <button class="btn btn-dark edit-btn form-control">Edit</button>
        </div>
    </div>
</body>