<% layout("./layouts/boilerplate.ejs") -%>
<body>
    <div class="row mt-3">
        <div class="col-6 offset-3">
            <h3>Create a New Listing</h3>
            <form method="POST" action="/listings" class="row g-3 needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" id="title" class="form-control" placeholder="Property name" type="text" required>
                </div>
                <div class="mb-3">
                    <label for="describe" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" placeholder="Describe about the place" id="describe" rows="4" required></textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload Listing Image</label>
                    <input name="listing[image]" class="form-control" id="image" type="file" required>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" class="form-control" id="price" placeholder="price per day-night" type="number" required>
                        <div class="invalid-feedback">enter a valid price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" class="form-control" id="country" type="text" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" class="form-control" id="location" type="text" required>
                </div>
                <button class="btn btn-dark mb-3">Add</button>
            </form>
        </div>
    </div>
</body>